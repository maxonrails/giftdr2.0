<h1>Reminders</h1>
<% @reminders.each do |reminder| %>
<p>
  name: <%= reminder.person.name %>
</p>
<p>
  event: <%= reminder.reminder_type.event %>
</p>
<p>
  <% reminder.person.interests.each do |interest| %>
  interests: <%= interest.name %>
  <% end %>
</p>
<p>
  date: <%= reminder.when.strftime("%D %r") %>
</p>
<% end %>
<%= link_to "New Reminder", new_reminder_path, class:'btn btn-default' %>
