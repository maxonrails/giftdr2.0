<%= form_tag amazon_api_path, method: "get" do %>
    <%= text_field_tag :search, nil, placeholder: 'search' %>
    <%= submit_tag "Search" %>
<% end %>

<% if @products != nil %>

    <% @products.each do |f| %>
        <%= link_to image_tag(f ['ItemAttributes']['Title']), f['DetailPageURL']%>
    <% end %>
<%end %>