<div class="container">
<%= form_tag amazon_api_path, method: "get" do %>
    <%= text_field_tag :search, nil, placeholder: 'search' %>
    <%= submit_tag "Search" %>
<% end %>

<% if @products != nil %>
<h1>Products from the Amazon API</h1>
  <div class="row">
     <% @products.each do |product| %>
       <div class="product col-md-3 itembox">
         <p>
           <%= link_to image_tag(product['MediumImage']['URL']), product['DetailPageURL'] if product['MediumImage'] %>
         </p>
         <p>
           <%= link_to product['ItemAttributes']['Title'], product['DetailPageURL'] if product['ItemAttributes']['Title'] %>
         </p>
         <p>
           <%= link_to product['Offers']['Offer']['OfferListing']['Price']['FormattedPrice'], product['DetailPageURL'] if product['Offers'] %>
         </p>
       </div>
     <% end %>
   </div>
<% end %>
</div>
