<%= form_for @reminder do |f| %>

  <%= f.fields_for :person do |person_form| %>
  <div class="form-group">
    <%= person_form.label :name, "name of person" %>
    <%= person_form.text_field :name, class:'form-control' %>
  </div>
  <% end %> 

  <%= f.fields_for :reminder_type do |event| %>
  <div class="form-group">
    <%= event.label :event, "event" %>
    <%= event.text_field :event, class:'form-control' %>
  </div> 
  <% end %> 

  <div class="form-group">
    <%= f.label :when, "date" %>
    <%= f.datetime_select :when, class:'form-control', ampm:true %>
  </div>
  <div class="form-group">
    <%= f.label :send_text %>
    <%= f.check_box :send_text %>
    <%= f.label :send_email %>
    <%= f.check_box :send_email %>
  </div>

  <div class="form-group">
    <%= f.submit class:'btn btn-primary' %>
  </div>
<% end %>